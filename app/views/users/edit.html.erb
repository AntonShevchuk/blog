<%= form_for @user, url: user_path do |f| %>
  <legend>Please fill registration form</legend>
  <%= bootstrap_field_wrap @user, :first_name do %>
    <%= f.label :first_name, class: "sr-only" %>
    <%= f.text_field :first_name, :placeholder => 'First Name', class: "form-control" %>
  <% end %>
  <%= bootstrap_field_wrap @user, :last_name do %>
    <%= f.label :last_name, class: "sr-only" %>
    <%= f.text_field :last_name, :placeholder => 'Last Name', class: "form-control" %>
  <% end %>
  <%= bootstrap_field_wrap @user, :bio do %>
    <%= f.label :bio, class: "sr-only" %>
    <%= f.text_area :bio, :placeholder => 'About', class: "form-control" %>
  <% end %>
  <%= f.submit "Save", :class => "btn btn-primary" %>
<% end %>
