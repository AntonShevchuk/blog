<div class="blog-masthead sticky-top">
  <div class="container">
    <nav class="navbar navbar-toggleable-md navbar-light ">
      <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <a class="navbar-brand" href="#">Blog</a>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav  mr-auto">
          <%= link_to "Home", root_path, class: "nav-item nav-link #{'active' if current_page? root_path}" %>
          <%= link_to "Pages", pages_path, class: "nav-item nav-link #{'active' if current_page? pages_path}" %>
          <%= link_to "Authors", users_path, class: "nav-item nav-link #{'active' if current_page? users_path}" %>
          <%= link_to "Users", admin_users_path, class: "nav-item nav-link #{'active' if current_page? admin_users_path}" if admin? %>
        </div>
        <div class="navbar-nav my-2 my-lg-0">
          <% if current_user %>
            <%= link_to current_user.name, user_path(current_user), class: "nav-item nav-link #{'active' if current_page? user_path(current_user)}"  %>
            <%= link_to "Log out", logout_path, method: "delete", class: "nav-item nav-link" %>
          <% else %>
            <%= link_to "Login", login_path, class: "nav-item nav-link #{'active' if current_page? login_path}"  %>
            <%= link_to "Signup", signup_path, class: "nav-item nav-link #{'active' if current_page? signup_path}"  %>
          <% end %>
        </div>
      </div>
    </nav>
  </div>
</div>
