<%= debug @page.errors %>
<%= form_for @page, url: pages_path do |f| %>
  <legend>Please fill required fields</legend>
  <%= bootstrap_field_wrap @page, :title do %>
    <%= f.label :title, class: "sr-only" %>
    <%= f.text_field :title, :placeholder => 'Page title', class: "form-control" %>
  <% end %>
  <%= bootstrap_field_wrap @page, :content do %>
    <%= f.label :content, class: "sr-only" %>
    <%= f.text_area :content, rows: '12', class: "form-control" %>
  <% end %>
  <%= bootstrap_field_wrap @page, :category_id do %>
    <%= f.label :category_id %>
    <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class: "form-control"}) %>
  <% end %>
  <%= f.submit "Save", :class => "btn btn-primary" %>
<% end %>
