<% @pages.each do |page| %>
<div class="blog-post">
  <h3 class="blog-post-title"><%= link_to page.title, page_path(page) %></h3>
  <p class="blog-post-meta">
      Posted at <%= page.created_at.strftime('%B %d, %Y')%>
      by <%= link_to page.user.name, user_path(page.user) %>
      to <%= link_to page.category.name, category_path(page.category) %>
  </p>
</div>
<% end %>
<%= will_paginate @pages, class: "blog-pagination", renderer: BootstrapHelper::LinkRenderer %>
