<table class="table">
  <thead>
    <tr>
      <th><%= sortable "first_name", "Name" %></th>
      <th><%= sortable "email" %></th>
      <th width="120"><%= sortable "role" %></th>
      <th width="200"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.name, user_path(user) %></td>
      <td><%= mail_to user.email%></td>
      <td><%= user.role %></td>
      <td>
        <%= link_to "edit", edit_admin_user_path(user), class: "btn btn-outline-success btn-sm" %>
        <%= link_to "delete", admin_user_path(user), method: "delete", class: "btn btn-outline-danger btn-sm", data: {confirm: "Are you sure?"} %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @pages, class: "blog-pagination", renderer: BootstrapHelper::LinkRenderer %>
