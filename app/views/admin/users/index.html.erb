<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Role</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.name, user_path(user) %></td>
      <td><%= mail_to user.email%></td>
      <td><%= user.role %></td>
      <td>
        <%= link_to "edit", edit_admin_user_path(user), class: "btn btn-outline-success btn-sm" %>
        <%= link_to "delete", delete_admin_user_path(user), class: "btn btn-outline-danger btn-sm", data: {confirm: "Are you sure?"} %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
