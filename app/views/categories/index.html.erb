<% content_for :title, "Categories" %>
<h2>Categories</h2>
<hr/>
<% if @categories.size != 0 %>
  <ul>
  <% @categories.each do |category| %>
    <li>
      <%= link_to category.name, category_path(category) %>
    </li>
  <% end %>
  </ul>
<% else %>
  <p>Not yet</p>
<% end %>
<% if admin? %>
  <hr/>
  <%= link_to "Create category", new_category_path, class: "btn btn-primary" %>
<% end %>
